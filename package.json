  },
  "homepage": "https://github.com/francesco-albanese/sangialba-wedding#readme",
  "dependencies": {
    "autoprefixer": "^7.1.1",
    "chokidar-cli": "^1.2.0",
    "node-sass-chokidar": "^0.0.1",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^4.0.0"
  },
  "devDependencies": {
    "nodemon": "^1.14.12"
  }
}
